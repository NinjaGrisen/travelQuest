        .menu-top
          if user
            a.menu-top__link(href="/hearts", class=(currentPath.startsWith('/hearts') ? 'menu-top__link--active' : ''))
              != h.icon('heart')
              span.heart-count #{user.bookmarked && user.bookmarked.length}
            a.menu-top__link(href="/account", class=(currentPath.startsWith('/account') ? 'menu-top__link--active' : ''))
              img.avatar(src=user.gravatar + '&d=retro')
          else
            a.menu-top__link(href="/register", class=(currentPath.startsWith('/register') ? 'menu-top__link--active' : '')) Register
            a.menu-top__link(href="/login", class=(currentPath.startsWith('/login') ? 'menu-top__link--active' : '')) Log In

    block messages
      if locals.flashes
        .inner
          .flash-messages
            - const categories = Object.keys(locals.flashes)
            each category in categories
              each message in flashes[category]
                .flash(class=`flash--${category}`)
                  p.flash__text!= message
                  button.flash__remove(onClick="this.parentElement.remove()") &times;

       
    .wrapper
      .menu-sidebar
        each item in h.menu
          if item.title === 'Add'
              if user != null && user.admin === 3 || user != null && user.admin === 4
                a.menu-sidebar__link(href=item.slug, class=(currentPath.startsWith(item.slug) ? 'menu-sidebar__link--active' : ''))
                  span #{item.title}

          else
            a.menu-sidebar__link(href=item.slug, class=(currentPath.startsWith(item.slug) ? 'menu-sidebar__link--active' : ''))
              span #{item.title}
              
      .content
        block content

    block scripts
      script(src=`https://maps.googleapis.com/maps/api/js?key=${process.env.MAP_KEY}&libraries=places`)
