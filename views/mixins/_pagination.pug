mixin pagination(page, pages, count, url)
    .pagination
        .pagination__prev
            if page > 1
                a(href=`${url}/${page - 1}`) Prev
        .pagination__text
            p Page #{page} of #{pages} - #{count} total results
        .pagination__next
            if page < pages
                a(href=`${url}/${parseFloat(page)+1}`) Next
